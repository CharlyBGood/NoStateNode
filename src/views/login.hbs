<div
  class="flex h-full flex-col flex-wrap content-center justify-center w-1/3 m-auto rounded"
>
  <form
    class="form-container shadow-md rounded px-8 pt-6"
    action="/users/login"
    method="POST"
  >
    <div class="mb-4">
      <label class="block text-orange-300 text-sm font-fold mb-2" for="email">
        Email
      </label>
      <input
        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        type="email"
        name="email"
        placeholder="youremail@example.com"
      />
    </div>
    <div class="mb-4">
      <label
        class="block text-orange-300 text-sm font-fold mb-2"
        for="password"
      >
        Password
      </label>
      <input
        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        type="password"
        name="password"
        id="password"
        placeholder="******"
      />
    </div>

    <button
      class="bg-orange-600 hover:bg-orange-400 w-100 border-none text-black font-bold block border rounded mb-2 py-2 px-4 w-full"
    >
      <input type="submit" value="Iniciar sesión" />
    </button>
    <div class="mb-4 text-center py-2">
      <a
        href="#!"
        ResetPassword
        class="inline-block align-center font-bold text-sm"
        onClick="{handleResetPassword}"
      >
        ¿Olvidaste tu contraseña?
      </a>
    </div>
    <div class="mb-4 flex items-center justify-evenly">
      <p class="mb-2 text-sm justify-between">
        ¿No tienes cuenta?
      </p>
      <a
        class="bg-orange-600 py-1 outline-none hover:bg-orange-400 border-none px-3 text-black font-bold border rounded"
        href="/register"
      >
        Registrarse
      </a>
    </div>
  </form>
</div>