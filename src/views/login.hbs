<div
  class="flex h-full flex-col flex-wrap content-center justify-center w-1/3 m-auto rounded"
>
  <form
    class="form-container shadow-md rounded px-8 pt-6"
    action="/users/login"
    method="POST"
  >
    <label for="username">Username</label>
    <input
      class="form-title"
      type="text"
      name="username"
      placeholder="username"
    />
    <label for="password">Password</label>
    <input
      class="form-content"
      type="password"
      name="password"
      id="password"
      placeholder="password"
    />
    <button
      class="bg-orange-600 py-1 outline-none hover:bg-orange-400 border-none px-3 text-black font-bold border rounded"
    >
      <input type="submit" value="Login" />
    </button>
    <div class="mb-4 text-center py-2">
      <a
        href="#!"
        ResetPassword
        class="inline-block align-center font-bold text-sm"
        onClick="{handleResetPassword}"
      >
        ¿Olvidaste tu contraseña?
      </a>
    </div>
    <div class="mb-4 flex items-center justify-evenly">
      <p class="mb-2 text-sm justify-between">
        ¿No tienes cuenta?
      </p>
      <a
        class="bg-orange-600 py-1 outline-none hover:bg-orange-400 border-none px-3 text-black font-bold border rounded"
        href="/register"
      >
        Registrarse
      </a>
    </div>
  </form>
</div>