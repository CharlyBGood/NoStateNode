<div class="container">
  <div class="main-container">
    <form
      class="form-container"
      action="/tasks/{{task._id}}/edit"
      method="POST"
    >
      <h1 style="text-align: center; font-size:large;">Update</h1>
      <label for="title">Descriptive title</label>
      <input
        type="text"
        name="title"
        placeholder="Title"
        value="{{task.title}}"
        class="form-title"
      />
      <label for="description">Link URL</label>
      <input
        name="description"
        type="url"
        placeholder="share link"
        value="{{task.description}}"
        id="description"
        class="form-content"
      />
      {{!-- <textarea
              name="description"
              rows="3"
              placeholder="Add a description"
              class="form-control rounded-0 bg-dark text-white"
            >
              {{task.description}}
            </textarea> --}}

      <button class="form-btn">Update</button>
    </form>
  </div>
</div>